<Page
    x:Class="AppDrinkWP.Contrasena"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppDrinkWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">

        <RelativePanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="txtContrasena" HorizontalAlignment="Center" TextWrapping="Wrap"  RelativePanel.Below="txtIngreseContra" Height="24" Width="289" />
            <TextBlock x:Name="txtIngreseContra" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="INGRESE LA CONTRASEÑA" VerticalAlignment="Top" Height="24" Width="200" Foreground="#FF9C9C9C"/>
        </RelativePanel>

       <RelativePanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Height="99" Margin="30,0">
            <Button x:Name="btnAceptar" Click="btnAceptar_Click" Content="ACEPTAR" HorizontalAlignment="Center"  Width="150" Background="#FF4F4F4F" />
            <Button x:Name="btnCancelar" Click="btnCancelar_Click" Content="CANCELAR" HorizontalAlignment="Center" RelativePanel.RightOf="btnAceptar"  Width="150" Background="#FF4F4F4F" />
        </RelativePanel>
        
    </Grid>
</Page>
